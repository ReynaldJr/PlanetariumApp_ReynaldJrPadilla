<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/planet_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_mercury_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_planet_category"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            tools:srcCompat="@drawable/mercury" />

        <TextView
            android:id="@+id/text_view_planet_title"
            android:layout_width="363dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="Mercury"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_planet_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_light"
            android:text="The Fastest Planet"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>